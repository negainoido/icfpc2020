  default-language:    Haskell2010
  ghc-options: -Wall

executable interpreter
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       
    base ^>=4.13.0.0, 
    interpreter
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite interpreter-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  other-modules:
    MyLibSpec,
    Negainoido.ParserSpec,
    Negainoido.EvalSpec
  build-depends:       
    base ^>=4.13.0.0,
    hspec ^>=2.7.1,
    HUnit ^>=1.6.0,
    mtl -any,
    containers -any,
    interpreter -any,
    hashtables -any,
    monad-logger -any
  build-tool-depends:
    hspec-discover:hspec-discover


