  -- other-extensions:
  build-depends:       
        base ^>=4.13.0.0,
        optparse-applicative ^>=0.15.1.0,
        array ^>=0.5.3.0,
        aeson ^>=1.4.6.0,
        aeson-pretty ^>= 0.8.8,
        http-client ^>=0.6.4,
        hashtables ^>= 1.2.3.4,
        mwc-random ^>= 0.14.0.0,
        monad-logger ^>= 0.3.32,
        pretty ^>= 1.1.3.6,
        text-show ^>= 3.8.5,
        text-builder ^>= 0.6.6.1,
        mtl -any,
        containers -any,
        text -any,
        bytestring -any,
        scientific -any,
        hashable -any,
        unordered-containers -any,
        vector -any,
        primitive -any,
        case-insensitive -any
